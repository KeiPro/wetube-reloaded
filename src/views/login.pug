extends base

block content 
    if errorMessage 
        span=errorMessage 
    form(method="POST")
        input(name="username" type="text" placeholder="input username" required)
        input(name="password" type="password" placeholder="input password" required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=639e0a51c5bb97ddaee7&allow_signup=false&scope=read:user user:email") Continue with Github &rarr;
    hr
    div 
        span Don't have an account? 
        a(href="/join") Create one now &rarr;