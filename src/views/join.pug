extends base

block content 
    if errorMessage 
        span=errorMessage 
    form(method="POST")
        input(name="name" type="text" placeholder="input name" required)
        input(name="email" type="email" placeholder="input email" required)
        input(name="username" type="text" placeholder="input username" required)
        input(name="password" type="password" placeholder="input password" required)
        input(name="password2" type="password" placeholder="Confirm password" required)
        input(name="location" type="text" placeholder="input location" required)
        input(type="submit", value="Join")